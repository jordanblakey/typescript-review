{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    // "outFile": "../../built/local/tsc.js",
    "outDir": ".",
    "typeRoots": ["./typings"],
    // "types": [
    //   "node",
    //   "lodash",
    //   "express"
    // ]
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true //, This flag turns on the below four: noImplicitAny, noImplicitThis, alwaysStrict, strictNullChecks
    // "noImplicitAny": true,
    // "noImplicitThis": true,
    // "alwaysStrict": true,
    // "strictNullChecks": true
  },
  // "files": [
  //   "types.ts",
  // ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "extends": "./configs/base",
  "compileOnSave": true
}
